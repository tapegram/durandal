home
<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="jumbotron">
				<h2>
					<%= @username %>
				</h2>
				<p>
					Create a new tournament here or select an existing tournament below.
				</p>
				<p>
					<a class="btn btn-primary btn-large" href="/tournaments/new">New Tournament!</a>
				</p>
			</div>
			<div class="row">
				<table class="table table-striped">
					<% current_user.tournaments.each do |t| %>
						<tr>
							<td><%= t.name %></td>
							<td><%= t.age %></td>
							<td><%= t.sex %></td>
							<td><%= t.weapon %></td>
							<td><%= t.team ? "Team" : "Individual" %></td>
							<td><%= t.date %></td>
							<td><a class="btn btn-primary" href="#">Edit</a></td>
						</tr>
					<% end %>
				</table>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
		</div>
	</div>
</div>